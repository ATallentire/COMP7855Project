<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>uploads</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>tempfile.dir</param-name>
    <param-value>tmpfiles</param-value>
  </context-param>
  
  <servlet>
	<servlet-name>upload</servlet-name>
    <servlet-class>UploadServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>Search</servlet-name>
    <servlet-class>SearchServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>HomeServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>Posting</servlet-name>
    <servlet-class>PostingServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ViewPostings</servlet-name>
    <servlet-class>ViewPostingsServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ViewOffers</servlet-name>
    <servlet-class>ViewOffersServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>HitServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ViewPostings</servlet-name>
    <url-pattern>/viewpostings</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ViewOffers</servlet-name>
    <url-pattern>/viewoffers</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Posting</servlet-name>
    <url-pattern>/posting</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
	<servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>/uploads</url-pattern>
  </servlet-mapping>
  
</web-app>
